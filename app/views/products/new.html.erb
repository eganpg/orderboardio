<%= form_for [@suborder, @product] do |l| %>
<div class="container-fluid body_wrapper">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="heading">enter product</h1>
    </div>
  </div>
  <div class="row">
  	<div class="col-xs-12 orderboardbutton">
  		<%= l.text_field :name, placeholder: 'enter product', class: "btn btn-default btn-lg" %>
  		<%= l.text_field :par, placeholder: 'enter par', class: "btn btn-default btn-lg" %>
  	</div>
  </div>
  <div class="row">
  	<div class="col-xs-12 orderboardbutton">
  		<%= l.text_field :onhand, placeholder: 'enter current stock', class: "btn btn-default btn-lg" %>
  		<%= l.text_field :unit, placeholder: 'enter unit', class: "btn btn-default btn-lg" %>
 

  	</div>
  </div>
  <div class="row">
  	<div class="col-xs-12 addboard">
  		<%= l.submit 'submit', class: 'btn btn-default' %>
       <% end %>
  	
  	</div>
	</div>
</div>	
	

	