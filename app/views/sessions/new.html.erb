

<%= form_for @login, {url: session_path} do |l| %>
<div class="container-fluid body_wrapper">
  <div class="row">
    <div class="col-md-12">
      <h1 class="heading">orderboard.io</h1>
    </div>
  </div>
  <div class="row">
   <div class="col-lg-4 col-md-offset-4 input">
    <div class="input-group">
      <%= l.text_field :email, placeholder: "email", class: "form-control" %>
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-arrow-left"></span></button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  <div class="row">
   <div class="col-lg-4 col-md-offset-4">
    <div class="input-group">
      <%= l.password_field :password, placeholder:"password....", class: "form-control" %>
      <span class="input-group-btn">
        <%= l.submit 'submit', class: 'btn btn-default' %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  <div class="row">
    <div class="col-lg-4 col-md-offset-4 input">
     <p>Don't Have an account yet?	<%= link_to "Sign up", new_login_path %></p>
     <p><%= link_to "forgotten password", new_password_reset_path %></p>
   </div>
 </div>
<% end %>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4 button"> 
      <% if @login.errors.any? %>
      <div id="error_explanation">
        <ul class="list-group">
        <% @login.errors.full_messages.each do |msg| %>
          <li class="list-group-item list-group-item-danger"><%= msg %></li>
        <% end %>
        </ul>
      </div>

<% end %>


